#6
import turtle
wn = turtle.Screen()
wn.bgcolor("lightgreen")
melvyn1 = turtle.Turtle()
melvyn1.pensize(2)
melvyn1.speed(5)
sz = 5

def draw_poly(t, n, sz):
    t.forward(100)
    t.left(45)

def equilateral(t,sz):
    draw_poly(melvyn1,sz,5)
    for i in range(3):
        t.forward(100)
        t.left(120)

equilateral(melvyn1,sz)

#7
def sum_to(n):
    end = 0
    while n > 0:
        end+=n
        n=n-1
    return(end)

print(sum_to(10))

#8
pi = 22/7

def areaofcircle(r):
    return pi*r**2

radius = int(input("What is the radius of your circle"))

print(areaofcircle(radius))

