    for i in range(5):
        t.forward(100)
        t.left(144)

drawstar(melvyn,sz)

#10
import turtle
wn = turtle.Screen()
wn.bgcolor("lightgreen")
melvyn = turtle.Turtle()
melvyn.pensize(2)
melvyn.speed(5)
sz = 5

def drawstar(t,sz):
    for i in range(5):
        t.color("pink")
        t.forward(100)
        t.left(144)

for i in range(5):
    drawstar(melvyn,sz)
    melvyn.penup()
    melvyn.left(144)
    melvyn.forward(350)
    melvyn.pendown()

