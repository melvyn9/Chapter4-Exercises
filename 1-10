wn.bgcolor("lightgreen")
melvyn1 = turtle.Turtle()
melvyn1.pensize(2)
melvyn1.speed(99999999)
sz = 5
mult = 1
def draw_spiral(t,sz,mult):
    for i in range(0,100):
        melvyn1.forward(sz*i)
        melvyn1.left(90)


draw_spiral(melvyn1,sz,mult)
